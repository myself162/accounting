<div class="span12">
  <div class="group">
    <%= link_to("New Bookkeeping", new_bookkeeping_path, :class => "btn btn-mini btn-primary pull-right") %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td> # </td>
        <td> Title </td>
        <td> Description </td>
      </tr>
    </thead>
    <tbody>
      <% @bookkeeping.each do |bookkeeping| %>
      <tr>
        <td> # </td>
        <td> <%= link_to(bookkeeping.title, bookkeeping_path(bookkeeping)) %> </td>
        <td> <%= bookkeeping.description %> </td>
        <td> <%= link_to("Edit", edit_bookkeeping_path(bookkeeping), :class => "btn btn-mini") %> 
             <%= link_to("Delete", bookkeeping_path(bookkeeping), :class => "btn btn-mini btn-primary", :method => :delete, :confirm => "Are you sure?") %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>




</div>